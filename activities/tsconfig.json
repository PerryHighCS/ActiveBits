{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "activebits-server/*": ["../server/*"],
      "@src/*": ["../client/src/*"]
    },
    "noEmit": true
  },
  "include": ["*/client/**/*", "*/server/**/*", "*/shared/**/*", "*/activity.config.*", "../types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
