{
  "name": "ActiveBits",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/ActiveBits",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/common-utils": {
      "username": "vscode"
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /workspaces/ActiveBits && npm install --workspaces --include-workspace-root",
  "postStartCommand": "bash .devcontainer/setup-dev.sh || echo 'Valkey check skipped'",
  "forwardPorts": [
    6379,
    3000,
    5173
  ],
  "portsAttributes": {
    "3000": {
      "label": "ActiveBits Server",
      "onAutoForward": "openPreview"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Valkey",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.env.linux": {
          "VALKEY_URL": "redis://valkey:6379"
        }
      },
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "remoteUser": "vscode"
}
